<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_pahlawan"
        tools:src="@color/colorPrimaryDark"
        app:civ_border_width="1dp"
        app:civ_border_color="#000"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_toEndOf="@id/img_pahlawan"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="Orientation,UselessLeaf">

        <TextView
            android:id="@+id/tv_nama_pahlawan"
            tools:text="@string/nama_pahlawan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_asal_pahlawan"
            tools:text="@string/asal_pahlawan"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>